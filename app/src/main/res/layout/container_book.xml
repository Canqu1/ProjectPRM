<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@drawable/drawable_shape">



  <ImageView
      android:id="@+id/img_room"
      android:layout_width="match_parent"
      android:layout_height="427dp"
      app:layout_constraintBottom_toTopOf="@+id/detail_layout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/room1" />

  <FrameLayout
      android:id="@+id/detail_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintBottom_toTopOf="@+id/frameLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/img_room"
      tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/image_rectangle">

    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_gravity="top|center"
        android:layout_marginLeft="23.84dp"
        android:layout_marginTop="42.5dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/txtTitle"
          android:layout_width="253.1dp"
          android:layout_height="32dp"
          android:layout_gravity="left"
          android:layout_marginTop="-3dp"
          android:layout_marginBottom="-3dp"
          android:gravity="left|center_vertical"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:singleLine="true"
          android:text="Swiss Hotel"
          android:textColor="#FF000000"
          android:textSize="26dp" />


      <LinearLayout
          android:id="@+id/location"
          android:layout_width="47dp"
          android:layout_height="47dp"
          android:background="@drawable/drawable_shape_1"
          android:gravity="center"
          android:orientation="horizontal"
          android:paddingLeft="10dp"
          android:paddingTop="10dp"
          android:paddingRight="10dp"
          android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/image7"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/location" />
      </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="359dp"
        android:layout_height="253dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="23.84dp"
        android:layout_marginTop="147.5dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Description"
        android:textColor="#FF000000"
        android:textSize="20dp" />


  </FrameLayout>

  <FrameLayout
      android:id="@+id/frameLayout"
      android:layout_width="411dp"
      android:layout_height="51dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/detail_layout">

    <LinearLayout
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/drawable_shape_1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

      <ImageView
          android:id="@+id/image8"
          android:layout_width="25dp"
          android:layout_height="29.17dp"
          android:scaleType="centerInside"
          android:src="@drawable/save" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/book_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/drawable_shape_1"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/text_book_now"
          android:layout_width="248dp"
          android:layout_height="49dp"
          android:gravity="center"
          android:includeFontPadding="false"
          android:maxLines="2"
          android:text="Book now"
          android:textColor="#FF010101"
          android:textSize="20dp" />
    </LinearLayout>


  </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>