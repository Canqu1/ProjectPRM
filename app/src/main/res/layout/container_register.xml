<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_register"
    android:layout_width="match_parent"
    android:layout_height="914dp"
    android:background="@drawable/container_register"
    android:gravity="left|top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="304dp"
        android:layout_height="93dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="31dp"
        android:layout_gravity="left"
        android:scaleType="centerInside"
        android:src="@drawable/image_logo" />

    <FrameLayout
        android:id="@+id/container_group"
        android:layout_width="364dp"
        android:layout_height="610dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="66dp"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/img_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="247dp"
            android:layout_gravity="top"
            android:background="@drawable/img_password_edit_text"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="67dp"
            android:layout_height="19dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="263dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Password"
            android:textColor="#FF000000"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="259dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/img_password" />

        <ImageView
            android:id="@+id/img_hide_password"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginLeft="317dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="260dp"
            android:layout_gravity="top"
            android:scaleType="centerInside"
            android:src="@drawable/img_hide_password" />

        <ImageView
            android:id="@+id/img_confirm_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="327dp"
            android:layout_marginBottom="231dp"
            android:background="@drawable/img_confirm_password_edit_text"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_confirm_password"
            android:layout_width="126dp"
            android:layout_height="18dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="344dp"
            android:layout_marginBottom="248dp"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Confirm Password"
            android:textColor="#FF000000"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_confirm_password"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="339dp"
            android:layout_marginBottom="246dp"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:src="@drawable/img_confirm_password" />

        <ImageView
            android:id="@+id/img_hide_confirm_password"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginLeft="317dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="340dp"
            android:layout_marginBottom="244dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_hide_confirm_password" />

        <ImageView
            android:id="@+id/img_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="167dp"
            android:layout_gravity="top"
            android:background="@drawable/img_email_edit_text"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_email_address"
            android:layout_width="98dp"
            android:layout_height="19dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="183dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Email Address"
            android:textColor="#FF000000"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="180dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/img_email" />

        <ImageView
            android:id="@+id/img_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="86dp"
            android:layout_gravity="top"
            android:background="@drawable/img_name_edit_text"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="41dp"
            android:layout_height="19dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="103dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Name"
            android:textColor="#FF000000"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_customer"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/img_customer" />

        <ImageView
            android:id="@+id/img_register_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="477dp"
            android:layout_marginBottom="81dp"
            android:background="@drawable/img_register_button"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_sign_up"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="493dp"
            android:layout_marginBottom="97dp"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="SIGN UP"
            android:textColor="#FF000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txt_have_account"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="92dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="565dp"
            android:layout_marginBottom="25dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Already have an account ?"
            android:textColor="#FF808080"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_login_now"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginLeft="139dp"
            android:layout_marginRight="139dp"
            android:layout_marginTop="591dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="LOGIN NOW"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_rectangle"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="409dp"
            android:layout_marginBottom="175dp"
            android:layout_gravity="left"
            android:background="@drawable/img_rectangle"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/txt_you_agree"
            android:layout_width="165dp"
            android:layout_height="19dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="413dp"
            android:layout_marginBottom="178dp"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="By signing up you agree "
            android:textColor="#FFFFFFFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_terms_conditions"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginLeft="214dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="412dp"
            android:layout_marginBottom="179dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Terms &amp; Conditions"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="101dp"
            android:layout_marginRight="100dp"
            android:layout_gravity="top"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Sign up"
            android:textColor="#FFFFFFFF"
            android:textSize="36dp" />
    </FrameLayout>
</LinearLayout>
